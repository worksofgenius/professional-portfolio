<div class="container">
  <div class="row justify-content-center">
    <div class="intro">
      <%= image_tag("portfolio-logo.png", alt: "Fried egg-shaped logo") %>
      <h1>Marisa N. Cassidy</h1>
      <h2><s>Fullstack Developer &nbsp; Project Manager</s></h2>
    </div>

    <div class="about-card">
      <div>
        <h1>About</h1>
        <br>
        <%= image_tag("marisa.jpg", :class => "avatar-large", alt: "Marisa N. Cassidy") %>
        <br><br>
        <h3>
          I'm an American fullstack developer, project manager, and writer based in Tokyo since 2009.<br><br>
          <i class="fab fa-linkedin-in"></i><i class="fab fa-github"></i><i class="fab fa-wordpress-simple"></i>
        </h3>
      </div>
    </div>

    <div class="projects-card">
      <div>
        <h1>Projects</h1>
        <br><br>
        <div class="portfolio-container">
          <div class="portfolio-card">
            <% data.products.each do |product| %>
              <div class="portfolioImage">
                <%= product.image %>
                <div onClick="window.open(url(<% product.url %>), '_blank')" class="middle">
                  <p>View</p>
                </div>
              </div>
              <div class="portfolioContent">
                <h5 class="cardCategory"><%= product.role %></h5>
                <h3 class="portfolioTitle"><%= product.name %></h3>
                <p><%= product.description %></p>
                <br><br>
                <% product.tags.each do |tag| %>
                  <p class="tags"><%= tag %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="stack-card">
      <div>
        <h1>Tech Stack</h1>
        <br>
        <h2>Front End</h2>
        <p>HTML5 &nbsp; CSS3 &nbsp; JavaScript</p>
        <br>
        <h2>Back End</h2>
        <p>Ruby &nbsp; Rails &nbsp; React &nbsp; PostgreSQL &nbsp; Heroku &nbsp; Netlify</p>
        <br>
        <h2>Other Tools</h2>
        <p>Git &nbsp; GitHub &nbsp; Figma &nbsp; Sketch &nbsp; WordPress</p>
      </div>
    </div>

    <div class="contact-card">
      <div>
        <h1>Contact</h1>
        <br>
        <h2>Let's work together.</h2>
        <br>
        <form name="contact" netlify>
          <p>
            <label>Name<br><input type="text" name="name" /></label>
          </p>
          <p>
            <label>Email<br><input type="email" name="email" /></label>
          </p>
          <p>
            <label>Message<br><textarea name="message"></textarea></label>
          </p>
          <p>
            <button type="submit">Submit</button>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>
